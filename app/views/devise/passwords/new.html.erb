<div class="devise_content">
  <h2><%= t('.forgot_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field label-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
    </div>

    <div class="actions msg">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "devise-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>