<h2>楽譜一覧ページ</h2>
<%= link_to "楽譜を追加する", new_score_path, data: { turbolinks: false} %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#all" class="nav-link active" data-toggle="tab">すべて</a>
  </li>
  <li class="nav-item">
    <a href="#finished" class="nav-link" data-toggle="tab"> 完成</a>
  </li>
  <li class="nav-item">
    <a href="#practice" class="nav-link" data-toggle="tab">練習中</a>
  </li>
  <li class="nav-item">
    <a href="#playing" class="nav-link" data-toggle="tab">弾きたい</a>
  </li>
</ul>
<div class="tab-content">
  <div id="all" class="tab-pane active">
    <% @scores.each do |score| %>
      <p><%= score.title %></p>
      <%= link_to "詳細", score %>
      <%= link_to "編集", edit_score_path(score), data: { turbolinks: false} %>
      <%= link_to "削除", score, method: :delete, data: { confirm: "楽譜を削除してもよろしいですか?" } %>
    <% end %>
  </div>
  <div id="finished" class="tab-pane">
    <% @scores = Score.where(status: 1) %>
    <% @scores.each do |score| %>
      <p><%= score.title %></p>
      <%= link_to "詳細", score %>
      <%= link_to "編集", edit_score_path(score), data: { turbolinks: false} %>
      <%= link_to "削除", score, method: :delete, data: { confirm: "楽譜を削除してもよろしいですか?" } %>
    <% end %>
  </div>
  <div id="practice" class="tab-pane">
    <% @scores = Score.where(status: 2) %>
    <% @scores.each do |score| %>
      <p><%= score.title %></p>
      <%= link_to "詳細", score %>
      <%= link_to "編集", edit_score_path(score), data: { turbolinks: false} %>
      <%= link_to "削除", score, method: :delete, data: { confirm: "楽譜を削除してもよろしいですか?" } %>
    <% end %>
  </div>
  <div id="playing" class="tab-pane">
    <% @scores = Score.where(status: 3) %>
    <% @scores.each do |score| %>
      <p><%= score.title %></p>
      <%= link_to "詳細", score %>
      <%= link_to "編集", edit_score_path(score), data: { turbolinks: false} %>
      <%= link_to "削除", score, method: :delete, data: { confirm: "楽譜を削除してもよろしいですか?" } %>
    <% end %>
  </div>
</div>
